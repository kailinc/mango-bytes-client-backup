<div class="row">
  <h1>Your Cart</h1>
  <hr>
    <div class="col-sm-12 carts">
      <hr>
      <p>{{cart.updatedAt}}</p>
      <p>Order#: {{cart._id}}</p>
      <hr>
      <div class="col-sm-8">
        {{#each cart.products as |product|}}
          <div class="col-sm-6">
            <img src="{{product.img}}" style="height: 150px; margin-bottom: 60px;">
          </div>
          <div class="col-sm-6" style="height: 200px; margin-bottom: 10px;">
            <p>{{product.name}}</p>
            <p>${{product.basePrice}} per</p>
            <p>DevCred: {{product.devCred}} per</p>
            <input type="number" class="form-control itemQuantity" value="{{product.quantity}}">
          </div>
        {{/each}}

      </div>
      <div class="col-sm-4" data-id={{cart._id}}>
        <h4>${{cart.totalPrice}}</h4>
        <h4>DevCred: {{cart.totalDevCred}}</h4>
        <h4>Paid: {{cart.isPaid}}</h4>
        <button class="btn btn-default clearCartBtn">Clear Cart</button>
        <button class="btn btn-default checkOutBtn">Check Out</button>
      </div>
    </div>
    <hr>
</div>
