<div class="row">
  <h1>Your Cart</h1>
  <hr>
    {{#each items as |item|}}
    <div class="col-sm-12 carts">
      <hr>
          <div class="col-sm-6" style="height: 200px; margin-bottom: 10px;">
            <img src="{{item.img}}">
          </div>
          <div class="col-sm-6" style="height: 200px; margin-bottom: 10px;">
            <h2>{{item.name}}</h2>
            <h3>${{item.basePrice}}  DevCred: {{item.devCred}} </h3>
            <p>{{item.des}}</p>
            <form class="itemForm form-horizontal" data-quantity='1' data-id={{item.id}} data-name={{item.name}} data-price={{item.basePrice}} data-dev-cred={{item.devCred}} data-attribute='{{item.attributes}}'>
                <div class="form-group">
                  <label for="inputEmail3" class="col-sm-3 control-label">Quantity</label>
                  <div class="col-sm-7">
                    <input type="number" name='quantity' min='1' max='10' class="form-control" placeholder="ex. 10">
                  </div>
                  <button type="submit" class="btn btn-default addCartBtn">Update</button>
                </div>
            </form>
            <p>Quantity: {{item.quantity}}</p>
            <button data-id={{item.id}} class='deleteItemBtn'>Remove Item</button>
          </div>
      </div>
    {{/each}}
    </div>
    <hr>
</div>
